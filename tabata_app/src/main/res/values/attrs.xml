<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="minValue" format="integer" />
    <attr name="maxValue" format="integer" />
    <attr name="defaultInputValue" format="integer" />

    <declare-styleable name="NumberInput">
        <attr name="minValue" />
        <attr name="maxValue" />
        <attr name="defaultInputValue" />
    </declare-styleable>

    <declare-styleable name="TimeInput">
        <attr name="minValue" />
        <attr name="maxValue" />
        <attr name="defaultInputValue" />
    </declare-styleable>

    <declare-styleable name="FontStyle">
        <attr name="font_small" format="dimension" />
        <attr name="font_medium" format="dimension" />
        <attr name="font_large" format="dimension" />
        <attr name="font_xlarge" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ThemeStyle">
        <attr name="theme_backgroundColor" format="color" />
        <attr name="theme_primaryColor" format="color"/>
        <attr name="theme_secondaryColor" format="color"/>

        <attr name="theme_accentTextColor" format="color"/>
        <attr name="theme_primaryTextColor" format="color"/>
        <attr name="theme_secondaryTextColor" format="color"/>

        <attr name="theme_mainMenuCircle" format="reference" />
        <attr name="theme_deleteIcon" format="reference" />
        <attr name="theme_closeIcon" format="reference" />
    </declare-styleable>

</resources>